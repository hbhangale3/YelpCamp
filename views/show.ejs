<% layout('layout/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">

    <div class="container-fluid mb-5" id="map"></div>

    <div class="row">
        <div class="col-6">
            <div id="carouselControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <% campground.image.forEach((img, i)=>{ %>
                        <div class="carousel-item <%= i===0 ?'active':'' %>">
                            <img class="d-block w-100" src="<%=img.url%>" alt="">
                        </div>
                        <% }) %>
                </div>
                <% if(campground.image.length>1) {%>
                    <a class="carousel-control-prev" href="#carouselControls" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselControls" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </a>
                    <% } %>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= campground.location%>
                    </li>
                    <li class="list-group-item">
                        $<%= campground.price%>
                    </li>
                    <li class="list-group-item">
                        Recommended By: <%= campground.author.username%>
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/campground" class="btn btn-info card-link">Home</a>
                    <% if(currentUser && campground.author._id.equals(currentUser._id)) { %>
                        <a href="/campground/<%=campground._id%>/edit" class="btn btn-success card-link">Edit
                            Information</a>
                        <form class="d-inline px-3" action="/campground/<%=campground._id%>/?_method=DELETE"
                            method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        <% } %>
                </div>
            </div>

        </div>
        <div class="col-6">
            <h2 class="mt-3">Leave A Review</h2>
            <form action="/campground/<%=campground._id%>/review" class="mb-3 validatedForm" method="POST" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <!-- <input class="form-range" type="range" min="1" max="5" step="0.1" name="rating" id="rating"> -->
                    <fieldset class="starability-checkmark">
                        <!-- <legend>First rating:</legend> -->
                        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="rating" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="rating" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="rating" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="rating" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="rating" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="review">Review</label>
                    <textarea class="form-control" name="review" id="review" cols="30" rows="3" <% if(!currentUser) {%>
                        placeholder="Please Login/Register to submit a review"
                        <% } %> required></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
            <% for(let review of campground.review) { %>
                <div class="card mb-3 ">
                    <div class="card-body">
                        <h5 class="card-title">By <%=review.author.username %>
                        </h5>
                        <h5 class="card-subtitle mb-2">
                            <p class="starability-result" data-rating="<%= review.rating %>">
                                Rated: <%= review.rating %> stars
                            </p>
                        </h5>
                        <p class="card-text">Review: <%= review.comment %>
                        </p>
                        <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
                            <form action="/campground/<%=campground._id%>/review/<%=review._id%>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                            <% } %>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <script>
        const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
        const campground = <%- JSON.stringify(campground) %>
    </script>
    <script src="/javascripts/showPageMap.js"></script>