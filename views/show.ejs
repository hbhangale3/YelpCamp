<% layout('layout/boilerplate') %>

    <div class="row">
        <div class="col-8 offset-2">
            <div class="card">
                <img src="<%=campground.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= campground.location%>
                    </li>
                    <li class="list-group-item">
                        $<%= campground.price%>
                </ul>
                <div class="card-body">
                    <a href="/campground" class="btn btn-info card-link">Home</a>
                    <a href="/campground/<%=campground._id%>/edit" class="btn btn-success card-link">Edit
                        Information</a>
                    <form class="d-inline px-3" action="/campground/<%=campground._id%>/?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <h2 class="mt-3">Leave A Review</h2>
            <form action="/campground/<%=campground._id%>/review" class="mb-3 validatedForm" method="POST" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" name="rating" id="rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="review">Review</label>
                    <textarea class="form-control" name="review" id="review" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>

            <ul class="list-group my-3">
                <% for(let rev of campground.review){ %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%=rev.comment%>
                            <span class="badge text-bg-primary rounded-pill">
                                <%=rev.rating %>
                            </span>
                    </li>
                    <% } %>
            </ul>
        </div>
    </div>